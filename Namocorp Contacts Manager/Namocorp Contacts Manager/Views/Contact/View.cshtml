@model Namocorp_Contacts_Manager.Models.UpdateContactViewModel

@{
}


<h1>Edit Contact</h1>
<form method="post" action="View" class="mt-5">
  <div class="mb-3">
    <label for="" class="form-label">Contact ID</label>
    <input type="text" class="form-control" asp-for="ContactId" readonly>
  </div>
  <div class="mb-3">
    <label for="" class="form-label">First Name </label>
    <input type="text" class="form-control" asp-for="FirstName">
  </div>
  <div class="mb-3">
    <label for="" class="form-label">Surname</label>
    <input type="text" class="form-control" asp-for="Surname">
  </div>
   <div class="mb-3">
    <label for="" class="form-label">Date of Birth</label>
    <input type="date" class="form-control" asp-for="DateOfBirth">
  </div>
   <div class="mb-3">
    <label for="" class="form-label">Telephone Number</label>
    <input type="text" class="form-control" asp-for="TelephoneNumber">
  </div>
  <div class="mb-3">
    <label for="" class="form-label">Cell Number</label>
    <input type="text" class="form-control" asp-for="CellNumber">
  </div>
     <div class="mb-3">
    <label for="" class="form-label">Street</label>
    <input type="text" class="form-control" asp-for="Street">
  </div>
  <div class="mb-3">
    <label for="" class="form-label">City</label>
    <input type="text" class="form-control" asp-for="City">
  </div>
  <div class="mb-3">
    <label for="" class="form-label">State</label>
    <input type="text" class="form-control" asp-for="State">
  </div>     <div class="mb-3">
    <label for="" class="form-label">Country</label>
    <input type="text" class="form-control" asp-for="Country">
  </div>  

  <div class="mb-3">
    <label for="" class="form-label">City Data</label>
    <!--<input type="text" class="form-control" asp-for="CityData" readonly>-->
    <textarea asp-for="CityData" type="text" class="form-control" rows="5" id="MessageInputField" readonly></textarea>     
  </div>
    <div class="mb-3">
    <label for="" class="form-label">State Data</label>
    <!--<input type="text" class="form-control" asp-for="State" readonly>-->    
    <textarea asp-for="StateData" type="text" class="form-control" rows="5" id="MessageInputField" readonly></textarea>
  </div>     
  <div class="mb-3">
    <label for="" class="form-label">Country Data</label>
    <!--<input type="text" class="form-control" asp-for="Country" readonly>-->
    <textarea asp-for="CountryData" type="text" class="form-control" rows="5" id="MessageInputField" readonly></textarea>
  </div> 

  <button type="submit" class="btn btn-primary">Submit</button>

  <button type="submit" class="btn btn-danger"
           asp-action="Delete"
           asp-controller="Contact">Delete</button>
</form>